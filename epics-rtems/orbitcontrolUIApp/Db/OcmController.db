### NOTE: responseX|YSize is numOcm*numBpm (presently,24*48)
record(waveform, "OCM:x:responseVector") {
	field(DTYP, "OCM Waveform")
	field(INP, "0")
	field(SCAN, "Passive")
	field(FTVL, "DOUBLE")
	field(NELM, "$(responseXSize)")
}

record(waveform, "OCM:y:responseVector") {
	field(DTYP, "OCM Waveform")
	field(INP, "0")
	field(SCAN, "Passive")
	field(FTVL, "DOUBLE")
	field(NELM, "$(responseYSize)")
}

record(waveform, "OCM:dispersionVector") {
	field(DTYP, "OCM Waveform")
	field(INP, "0")
	field(SCAN, "Passive")
	field(FTVL, "DOUBLE")
	field(NELM, "$(numBpm)")
}

###NOTE: need to get limits for maxStep && corrFraction records!!!
